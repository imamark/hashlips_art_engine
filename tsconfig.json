{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@hashlips/*": ["./src/*"],
    },
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
